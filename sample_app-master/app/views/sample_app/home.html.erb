<% provide(:title,"Home") %>
<!DOCTYPE html>
<html>
<head>
	<title><%= full_title(yield(:title)) %></title>
	<%= stylesheet_link_tag "custom.css" %>
</head>
<body>
<%= yield %>
<%= render 'layouts/header' %>
<div class="content">
	<div class="content-wrap">
		<p class="p1">Welcome to the Home Sample App</p>
		<h6>This is the home page for the <a href="http://www.railstutorial.org">Ruby on Rails Tutorial</a> sample application</h6>
		<%= button_to "Sign up now!", sample_app_login_path, :class =>"button-class", :method => "get" %>
	</div>
</div>
<%= render 'layouts/footer' %>
</body>
</html>